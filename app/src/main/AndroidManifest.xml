<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.dreamteam.octodrive"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity"/>
        <activity android:name=".activity.LoginActivity"/>
        <activity android:name=".activity.RegisterActivity"/>
        <activity android:name=".activity.QuestionActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.FinishActivity"/>
        <activity
            android:name=".activity.admin.AdminActivity"
            android:label="@string/title_activity_admin">
        </activity>
        <activity
            android:name=".activity.admin.QuestionDetailsActivity"
            android:label="@string/title_activity_question_details">
        </activity>
        <activity android:name=".activity.admin.UserDetailsActivity">
        </activity>
    </application>

</manifest>
